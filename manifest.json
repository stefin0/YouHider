{
    "manifest_version": 3,
    "name": "YouHider",
    "version": "0.8.1",
    "description": "Hide YouTube distractions.",
    "permissions": [
        "scripting",
        "storage"
    ],
    "background": {
        "service_worker": "background.js",
        "scripts": [
            "background.js"
        ],
        "type": "module"
    },
    "host_permissions": [
        "*://*.youtube.com/*"
    ],
    "action": {
        "default_icon": {
            "16": "icons/YouHider-16.png",
            "32": "icons/YouHider-32.png"
        },
        "default_popup": "popup/youhider.html",
        "default_title": "YouHider"
    }
}
